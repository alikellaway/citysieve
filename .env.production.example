# Copy this to .env.production on the server and fill in real values
# IMPORTANT: Never commit .env.production to git — it's in .gitignore

DATABASE_URL=file:/app/data/prod.db

# Generate with: openssl rand -base64 32
AUTH_SECRET=

NEXTAUTH_URL=https://citysieve.com

# Google OAuth — get from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Buy Me a Coffee username
NEXT_PUBLIC_BMAC_USERNAME=alike

# Optional: Awin affiliate ID for Rightmove/Zoopla links
NEXT_PUBLIC_AWIN_ID=

# Optional: Sponsored slot in area modal
NEXT_PUBLIC_SPONSORED_URL=
NEXT_PUBLIC_SPONSORED_LABEL=
NEXT_PUBLIC_SPONSORED_TEXT=

# Admin analytics API — used by Claude agents to pull SurveyAnalytics data
# Generate with: openssl rand -base64 32
# Must match the key stored in your local .env.local for agent access
ANALYTICS_API_KEY=

# Optional: Google AdSense display ads
# Leave empty to show placeholder boxes. When set, all three slot IDs must also
# be provided. Obtain your pub-ID and slot IDs from the AdSense dashboard.
NEXT_PUBLIC_ADSENSE_PUB_ID=          # ca-pub-XXXXXXXXXXXXXXXXX
NEXT_PUBLIC_ADSENSE_SLOT_INLINE=     # slot ID for the 320×50/728×90 inline banner (results page, every 3rd card)
NEXT_PUBLIC_ADSENSE_SLOT_LEADERBOARD= # slot ID for the 728×90/970×90 leaderboard (landing page)
NEXT_PUBLIC_ADSENSE_SLOT_RECTANGLE=  # slot ID for the 300×250 rectangle (results page + area modal)
